<h1>This is a new page!</h1>
<h2>implement search function here</h2>
<form action="/books/search" method="POST">
  <input type="text" name="search" autocomplete="off">
  <button>Search!</button>
</form>

<% if (search) { %>
  <h2>You searched for <%= search %></h2>
<% } %>


<% results?.forEach(book => { %>
  <h2><%= book.title %></h2>
  <img src="<%= book.imageLinks%>" alt="">
  <form action="/profiles/addBook" method="POST">
    <input hidden type="text" name="authors" value="<%= book.authors %>">
    <input hidden type="number" name="pageCount"  value="<%= book.pageCount %>">
    <button type="submit">Add book to my shelf.</button>
    
  </form>
<% }) %>



