<%- include('../partials/html-head') %>
<link rel="stylesheet" href="style.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= book.name %></h1>
  <section>
  <p><%= book.owner.name %> added this book!</p>
  <h2>This book <%= book.movieAdapt ? "has an adaptation." : "doesn't have an adaptation." %></h2>
  <% if (user) { %>
    <form action="/books/<%= book._id %>/flip-movie?_method=PATCH" method="POST">
      <button type="submit">Book <%= book.movieAdapt ? "doesn't have a movie adaptation" : "has a movie adaptation" %>
      </button>
    </form>

    <h2>Reviews:</h2>
    <form id="add-review-form" action="/books/<%= book._id %>/reviews" method="POST">
      <label for="content-textarea">Review:</label>
      <textarea name="content" id="content-textarea" required></textarea>
      <label for="rating-select">Rating:</label>
      <select name="rating" id="rating-select">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3" selected>3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <button type="submit">Add Review</button>
    </form>
  <% } %>
  <% if (book.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% book.reviews.forEach(review => { %>
          <tr>
            <td><%= review.createdAt.toLocaleDateString() %></td>
            <td><%= review.content %></td>
            <td><%= review.rating %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Reviews Yet</h3>
  <% } %>


  <% if (book.owner.equals(user?.profile._id)) { %>
    <form action="/books/<%= book._id %>/edit" method="GET">
      <button type="submit">Edit this Book</button>
    </form>
    <form action="/books/<%= book._id %>?_method=DELETE" class="delete-form" method="POST"><button type="submit">X</button></form>
  <% } %>

  <form action="/profiles/addBook" method="">
    <button type="submit">Add to my shelf.</button>
  </form>
</section>
<%- include('../partials/footer') %>